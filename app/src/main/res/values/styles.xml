<resources>
    <!-- Темная тема для приложения -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Цвет фона -->
        <item name="android:windowBackground">@color/authColorBackground</item>
        <!-- Цвет текста -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>

    <!-- Стиль для заголовков -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Стиль для текста под кнопкой -->
    <style name="SubTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>



    <style name="Widget.BottomNavigationView.Custom" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item_selector</item>
        <item name="itemTextColor">@color/bottom_nav_item_selector</item>
        <item name="android:textSize">50sp</item>

    </style>
    <!-- Стиль для квадратного FAB -->
    <style name="Widget.Fab.Square" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Fab.Square</item>
        <item name="android:background">@drawable/fab_square</item>
    </style>

    <!-- Оверлей для форми FAB -->
    <style name="ShapeAppearanceOverlay.Fab.Square" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>





</resources>